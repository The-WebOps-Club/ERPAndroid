<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
    android:minWidth="600dp"
    android:minHeight="500dp"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        >

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_navigate_front"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="People who Acknowledged"
            android:id="@+id/tvFragmentFirst"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="100"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/black_color_primary_text"
            />


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black_color_divider"
             />

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rvAckno"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:fastScrollAlwaysVisible="true"
            android:fastScrollEnabled="true"
            android:overScrollMode="always"
            android:layout_weight="1"
            />

</LinearLayout>