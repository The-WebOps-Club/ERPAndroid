<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cvWall"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:cardBackgroundColor="@color/white"
    >



<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.saarang.erp.Activities.MainActivityTest$PlaceholderFragment"
    android:orientation="horizontal"
    android:id="@+id/llWall"
    android:background="@color/white"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:weightSum="100"
    >

        <ImageView
           android:paddingLeft="5dp"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:src="@drawable/ic_group"
           android:layout_margin="8dp"
           android:layout_gravity="center_vertical"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="100"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Mobile Operations and Web "
                android:id="@+id/tvWall1"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:textColor="@color/indigo_color_primary_text"
                android:singleLine="true"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21 Members"
                android:id="@+id/tvWall2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:paddingTop="2dp"
                android:paddingBottom="6dp"
                android:paddingLeft="10dp"
                android:textColor="@color/indigo_color_secondary"
                />

        </LinearLayout>

        <View
            android:id="@+id/dividerVertical"
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="@color/indigo_color_divider"
        />


        <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_arrow"
                android:id="@+id/ivWall"
                android:layout_margin="8dp"
                android:paddingLeft="8dp"
                android:layout_gravity="center_vertical"
        />


</LinearLayout>

    </android.support.v7.widget.CardView>


